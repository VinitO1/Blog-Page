<%- include("./partials/header") %>

<form class="form-content" action="/posts/<%= id %>/edit" method="POST">
	<h1>Edit post</h1>
	<div class="mb-3">
		<label for="postTitle" class="form-label">Title</label>
		<input
			type="text"
			class="form-control"
			id="postTitle"
			name="title"
			value="<%= title %>"
			autocomplete="off" />
	</div>
	<div class="mb-3">
		<label for="postBody" class="form-label">Post</label>
		<textarea class="form-control" id="postBody" name="content" rows="5">
            <%= content %>
        </textarea
		>
	</div>
	<button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<%- include("./partials/footer") %>
